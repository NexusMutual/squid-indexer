{
  "name": "indexer",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "description": "Nexus Mutual Indexer",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib/",
    "codegen": "sqd codegen",
    "copy-abis": "ts-node src/scripts/copy-abis.ts",
    "db:run": "sqd up",
    "db:migrate": "sqd migration:apply",
    "db:psql": "sqd psql",
    "dev:products": "sqd migration:apply && SQD_DEBUG=sqd:processor:mapping nodemon -w src -e ts -x ts-node src/processors/products/index.ts",
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "eslint --max-warnings 0 . --fix",
    "start:api": "sqd migration:apply && node dist/api/index.js",
    "start:products": "sqd migration:apply && node lib/processors/products/index.js",
    "test": "TS_NODE_PROJECT=tsconfig.test.json mocha -r ts-node/register -r tsconfig-paths/register 'test/**/*.ts' --exit",
    "typegen": "sqd typegen"
  },
  "dependencies": {
    "@nexusmutual/deployments": "^3.1.0",
    "@subsquid/evm-abi": "^0.3.1",
    "@subsquid/evm-processor": "^1.27.3",
    "@subsquid/typeorm-migration": "^1.3.0",
    "@subsquid/typeorm-store": "^1.5.1",
    "convict": "^6.2.4",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@subsquid/evm-typegen": "^4.5.1",
    "@subsquid/typeorm-codegen": "^2.0.2",
    "@types/chai": "^5.2.3",
    "@types/convict": "^6.1.6",
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^21.0.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "chai": "^6.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^5.2.1",
    "mocha": "^11.7.5",
    "prettier": "^3.2.5",
    "sinon": "^21.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^3.15.0",
    "typescript": "^5.5.4"
  }
}
