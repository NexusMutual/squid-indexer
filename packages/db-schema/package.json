{
  "name": "@nexusmutual/db-schema",
  "version": "0.0.1",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist/",
    "codegen": "squid-typeorm-codegen",
    "copy-abis": "ts-node src/scripts/copy-abis.ts",
    "db:psql": "docker exec -it db-schema-db-1 psql -U postgres -d indexer",
    "db:up": "docker compose up --force-recreate --renew-anon-volumes",
    "db:wait": "ts-node src/scripts/wait-for-db.ts",
    "dev": "tsc --build --watch",
    "migration:generate": "squid-typeorm-migration generate",
    "migration:clean": "npx --yes rimraf ./db/migrations",
    "typegen": "squid-evm-typegen ./src/abi ./abi/*.json --multicall"
  },
  "dependencies": {
    "@subsquid/evm-abi": "^0.3.1",
    "@subsquid/evm-codec": "^0.3.0",
    "@subsquid/evm-processor": "^1.27.3",
    "@subsquid/typeorm-config": "^4.1.1",
    "@subsquid/typeorm-migration": "^1.3.0",
    "@subsquid/typeorm-store": "^1.5.1",
    "debug": "^4.4.3",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@nexusmutual/deployments": "^3.1.0",
    "@nexusmutual/typescript-config": "workspace:*",
    "@subsquid/evm-typegen": "^4.5.1",
    "@subsquid/typeorm-codegen": "^2.0.2",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/src/index.js"
    },
    "./model": {
      "types": "./src/model/index.ts",
      "default": "./dist/src/model/index.js"
    },
    "./model/*": {
      "types": "./src/model/*.ts",
      "default": "./dist/src/model/*.js"
    },
    "./abi/*": {
      "types": "./src/abi/*.ts",
      "default": "./dist/src/abi/*.js"
    }
  }
}
